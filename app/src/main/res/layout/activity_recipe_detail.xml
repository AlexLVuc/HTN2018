<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recipedetail.RecipeDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/recipe_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/recipe_detail_toolbar"/>

    <TextView
        android:id="@+id/ingredient_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/recipe_image"/>

    <TextView
        android:padding="16dp"
        android:id="@+id/recipe_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ingredient_text"
        android:scrollbars="vertical" />

</RelativeLayout>